<%= form_for [event, comment], html: {class: "form-inline"} do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.hidden_field :event_id, value: event.id %>
      <%= form.text_area :content, rows: 1, :class => "comment-box form-control",
          :required => true, :autocomplete => 'off', placeholder: "Comment" %>
      <div class="upload-btn-wrapper comment-image">
        <a href="javascript:void(0)" class="btn btn-secondary"><%= fa_icon "camera" %></a>
        <%= form.file_field :image %>
      </div>    
      <%= form.submit "Comment", id: "reply_submit", class: "btn btn-primary" %>
  </div>

<% end %>
